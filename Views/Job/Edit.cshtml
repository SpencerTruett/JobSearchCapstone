@model JobSearch.Models.ViewModels.JobEmploymentTypeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.Position" class="control-label"></label>
                <input asp-for="Job.Position" class="form-control" />
                <span asp-validation-for="Job.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Description" class="control-label"></label>
                <input asp-for="Job.Description" class="form-control" />
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Salary" class="control-label">Salary</label>
                <input asp-for="Job.Salary" class="form-control" />
                <span asp-validation-for="Job.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.YearsOfExperience" class="control-label">Years of Experience</label>
                <input asp-for="Job.YearsOfExperience" class="form-control" />
                <span asp-validation-for="Job.YearsOfExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.CategoryId" class="control-label">Job Category</label>
                <select asp-for="Job.CategoryId" class="form-control" asp-items="@Model.CategoryOptions">
                    <option value="" hidden>Please make a selection</option>
                </select>
                <span asp-validation-for="Job.CategoryId" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Job.EmploymentTypeId" class="control-label">Employment Type</label>
                <select asp-for="Job.EmploymentTypeId" class="form-control" asp-items="@Model.EmploymentTypeOptions">
                    <option value="" hidden>Please make a selection</option>
                </select>
                <span asp-validation-for="Job.EmploymentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Job.CompanyId" class="form-control" />
                <span asp-validation-for="Job.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Employer"
       asp-action="Index" class="btn btn-secondary btn-sm text-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
