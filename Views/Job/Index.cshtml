@model IEnumerable<JobSearch.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Job Search</h1>

<details>
    <summary>Search</summary>
    <form asp-controller="Job" asp-action="Index">
        <p>
            Job Title: <input type="text" name="SearchString" class="form-control form-inline w-25">
            Company: <input type="text" name="SearchString" class="form-control form-inline w-25">
            Category: <input type="text" name="SearchString" class="form-control form-inline w-25">
            Location: <input type="text" name="citySearchString" class="form-control form-inline w-25">
        </p>
        <input type="submit" value="Search" />
        <input type="button" value="Reset" onclick="location.href='/Job'" />
    </form>
</details>

<div class="col-md-12">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    Years of Experience
                </th>
                <th>
                    Emplyment Type
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Position, "Details", "Job", new { id = item.Id }, new { area = "" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearsOfExperience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmploymentType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Label)
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>