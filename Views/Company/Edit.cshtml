@model JobSearch.Models.ViewModels.EmployerCompanyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Company Info</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Company.Id" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label">Company Name</label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.LocationId" class="control-label">Location</label>
                <select asp-for="Company.LocationId" class="form-control" asp-items="@Model.LocationOptions">
                    <option value="" hidden>Please make a selection</option>
                </select>
                <span asp-validation-for="Company.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.AboutUs" class="control-label">About Us</label>
                <input asp-for="Company.AboutUs" class="form-control" />
                <span asp-validation-for="Company.AboutUs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div>
        <a asp-controller="Employer"
           asp-action="Index" class="btn btn-secondary btn-sm text-dark">Back to List</a>
    </div>
</div>

