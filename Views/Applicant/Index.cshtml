@model JobSearch.Models.ViewModels.ApplicantJobViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Job Statuses</h1>

<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Job.Position)
                    </th>
                    <th>
                        Company Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Job.Salary)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Jobs)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Position, "Details", "Job", new { id = item.Id }, new { area = "" })
                        </td>
                        <td>
                            @Html.ActionLink(item.Company.CompanyName, "Details", "Company", new { id = item.Id }, new { area = "" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>@*  *@
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

