@model IEnumerable<JobSearch.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1 class="col-md-8" style="padding: 0"> Job Posts</h1>

<p>
    <a asp-controller="Job" asp-action="Create">Create a New Job Post</a>
</p>
<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th>
                        Company Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        Years of Experience
                    </th>
                    <th>
                        Emplyment Type
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Position, "Details", "Job", new { id = item.Id }, new { area = "" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YearsOfExperience)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmploymentType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Label)
                        </td>
                        @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
            <div>
                @foreach (var item in Model)
                {

                    <dd>
                        <h2>@Html.DisplayFor(modelItem => item.Company.CompanyName)</h2>
                    </dd>
                    <dd>
                        <p>
                            <a asp-controller="Company" asp-action="Edit">Edit Company Info</a>
                        </p>
                    </dd>

                    <dd>
                        <dt>Location: </dt> @Html.DisplayFor(modelItem => item.Company.Location.Name)
                    </dd>

                    @if (item.Company.AboutUs == null)
                    {
                        <dt>
                            About Us
                        </dt>
                        <dd>
                            "Tell us about your Company here!"
                        </dd>
                    }
                    else
                    {
                        <dt>
                            About Us
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.Company.AboutUs)
                        </dd>
                    }
                }
            </div>
    </div>
</div>