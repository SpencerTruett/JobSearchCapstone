@using Microsoft.AspNetCore.Identity
@model JobSearch.Models.ApplicationUser
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (!SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Job Search</h1>
        <h1>(Working Title)</h1>
        <div class="col-md-12">
            <dl class="row" style="margin-top:150px;">
                <dt class="col-md-6">
                    <h1 style="font-size:80px;">
                        <a asp-area="Identity" asp-page="/Account/EmployerLogin">Employer Login</a>
                    </h1>
                </dt>
                <dt class="col-md-6">
                    <h1 style="font-size:80px;">
                        <a asp-area="Identity" asp-page="/Account/ApplicantLogin">Applicant Login</a>
                    </h1>
                </dt>
            </dl>
        </div>
    </div>
}